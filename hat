local ReGui = loadstring(game:HttpGet('https://raw.githubusercontent.com/depthso/Dear-ReGui/refs/heads/main/ReGui.lua'))()
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local TextChatService = game:GetService("TextChatService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Backpack = LocalPlayer.Backpack

local function gc()
	return LocalPlayer.Character
end

local function SendMsg(str,hide)
    if hide then
        TextChatService.TextChannels.RBXSystem:SendAsync(str)
    else
        TextChatService.TextChannels.RBXGeneral:SendAsync(str)
    end
end

local Window = ReGui:TabsWindow({
	Title = "APR | All Purpose Rabbit🐇",
	Size = UDim2.fromOffset(300, 200)
})

local tab1 = Window:CreateTab({Name="Main"})
local tab2 = Window:CreateTab({Name="Arkenstone"})


tab1:Label({Text="Update 8"})

local servs = tab1:Row()
servs:Label({Text="Join..."})
servs:Button({
	Text = " XL ",
	Callback = function()
		ReplicatedStorage.System:FireServer("xl")
	end,
})
servs:Button({
	Text = " VC ",
	Callback = function()
		ReplicatedStorage.JoinXL:FireServer("vc")
	end,
})
servs:Button({
	Text = " OG ",
	Callback = function()
		ReplicatedStorage.JoinXL:FireServer("og")
	end,
})

local arkc1
local arkc2
tab2:Checkbox({
	Value = false,
	Label = "Auto reset on enlighten",
	Callback = function(self, Value: boolean)
		if Value then
			arkc1 = Backpack.ChildAdded:Connect(function(ins)
				if ins.Name == "The Arkenstone" then
					SendMsg("reset",true)
				end
			end)
			arkc2 = gc().ChildAdded:Connect(function(ins)
				if ins.Name == "The Arkenstone" then
					SendMsg("reset",true)
				end
			end)
		else
			arkc1:Disconnect()
			arkc2:Disconnect()
		end
	end
})

--Popup
local ModalWindow = Window:PopupModal({
	Title = "Credits"
}) --> Canvas

ModalWindow:Label({
	Text = "Script by doingbadlysofar, ReGui library by depthso",
	TextWrapped = true
})
ModalWindow:Separator()
ModalWindow:Checkbox({
	Value = false,
	Label = "Don't show again"
})

local Row = ModalWindow:Row({
	Expanded = true
}) --> Canvas
Row:Button({
	Text = "Enter",
	Callback = function()
		ModalWindow:ClosePopup()
	end,
})
